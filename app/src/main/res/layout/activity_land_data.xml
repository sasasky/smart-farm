<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".LandDataActivity">

    <RelativeLayout
        android:id="@+id/add_land_titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/button_backward"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/back"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:drawablePadding="9dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center"
            android:singleLine="true"
            android:text="@string/land_detail"
            android:textColor="#ffffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/button_setting"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawablePadding="9dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="@string/setting"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/context"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#8BC34A"
                android:text="连接网络"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Tips"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/Land_Pic"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="400dp" />

            <TextView
                android:id="@+id/Land_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                android:textIsSelectable="true"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/Land_Pic" />

            <TextView
                android:id="@+id/Land_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@id/Land_Name"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textIsSelectable="true"/>

            <LinearLayout
                android:id="@+id/Data"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/Land_Detail">

                <TextView
                    android:id="@+id/Land_Data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="@string/data"
                    android:textColor="@color/green"
                    android:textIsSelectable="true"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@id/Land_Price" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="@id/Land_Data">

                    <RelativeLayout
                        android:id="@+id/data1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:text="@string/water"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/humidity1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0%"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/pic1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/humidity1"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:contentDescription="water"
                            android:gravity="center"
                            app:srcCompat="@drawable/water" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/data2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:text="@string/warm"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/temperature1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0℃"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/pic2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/temperature1"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:contentDescription="warm"
                            android:gravity="center"
                            app:srcCompat="@drawable/warm" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/data4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:text="@string/light"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/light1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0%"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/pic4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/light1"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:contentDescription="light"
                            android:gravity="center"
                            app:srcCompat="@drawable/light" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <Switch
                android:id="@+id/watering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="灌溉"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/co2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="输送二氧化碳"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/lighting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="增加光照"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>